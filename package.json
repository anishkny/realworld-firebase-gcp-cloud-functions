    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "@google-cloud/functions-emulator": "^1.0.0-alpha.25",
    "casual": "^1.5.17",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "jsdoc": "^3.5.5",
    "mocha": "^4.0.0",
    "mocha-junit-reporter": "^1.15.0",
    "mocha-multi-reporters": "^1.1.6",
    "mochawesome": "^3.0.0",
    "newman": "3.8.3",
    "nyc": "^11.2.1"
  },
